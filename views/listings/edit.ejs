<% layout('/layouts/boilerplate')  %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2" >
      
   
  <h1>Edit your  listings</h1>
  <form method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control" required>
      <div class="invalid-feedback">
            Please provide a title.
      </div>
    </div>

    
    <div class="mb-3">
      <label for="description"class="form-label" >Description</label>
      <textarea type="text" name="listing[description]" class="form-control" required><%=listing.description%></textarea>
      <div class="invalid-feedback">
            Please enter a description.
      </div>
    </div>
    
    <div class="mb-3">
      <p>Original Listing image</p>
      <img src="<%= listing.image.url%>" alt="" height="200" width="250">
    </div>

    <div class="mb-3">
      <label for="image"class="form-label" >Upload New Image</label>
      <input type="file" name="listing[image]" value="<%=listing.image%>" placeholder="Enter image URL/Link" class="form-control" >
    </div>
    <div class="row">
    <div class="mg-3 col-md-4">
      <label for="price"class="form-label" >Price</label>
      <input type="number" name="listing[price]" value="<%=listing.price%>" class="form-control" required>
      <div class="invalid-feedback">
              Please enter a valid price.
      </div>
    </div>
      
    
    <div class="mg-3 col-md-4">

      <label for="country"class="form-label" >Country</label>
      <input type="text" name="listing[country]" value="<%=listing.country%>" class="form-control" required>
      <div class="invalid-feedback">
              Please specify the country.
      </div>
    </div>
    </div>
    <div class="mb-3">
      <label for="location" class="form-label" >Location</label>
      <input type="text" name="listing[location]" value="<%=listing.location%>" class="form-control" required>
      <div class="invalid-feedback">
            Please provide the location.
      </div>
    </div>
    <button class="btn btn-dark edit-btn mt-3" >Edit</button>
    
  </form>
 </div>
</div>
